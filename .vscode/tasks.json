{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [	
                "-std=c17",
                "-o",
                "build/tdgame",
                "src/*.c",
                "-I./include",
                "-L./libs",
                "-lmingw32",
                "-lSDL2main",	
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-O3",
                "-finline-functions",
                "-march=native",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
            ]
        }
    ]
}